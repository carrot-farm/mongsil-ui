{
  "name": "mongsil-ui",
  "version": "0.0.1",
  "description": "react ui library",
  "main": "dist/*.bundle.ts",
  "scripts": {
    "start": "webpack serve --open --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint ./src/**/*.tsx --fix",
    "format": "prettier --write ./src",
    "test": "jest --config=jest.config.js",
    "storybook": "start-storybook -p 9002",
    "build-storybook": "build-storybook",
    "cy": "cypress run --browser chrome",
    "cy:open": "cypress open",
    "test:cypress": "wait on http://localhost:9002/ && yarn cy",
    "test:snapshots": "jest --config=jest.config.js storybook.test.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --ext .tsx --ext .ts src/ --fix"
    ],
    "./src/**": [
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carrot-farm/mongsil-ui.git"
  },
  "keywords": [
    "react",
    "ui"
  ],
  "author": "chohoki@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carrot-farm/mongsil-ui/issues"
  },
  "homepage": "https://github.com/carrot-farm/mongsil-ui#readme",
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@cypress/snapshot": "^2.1.7",
    "@mdx-js/react": "^1.6.22",
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-storyshots": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-loader": "^8.2.2",
    "cypress": "^8.4.0",
    "esbuild-loader": "^2.15.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "puppeteer": "^10.2.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "cypress-image-snapshot": "^4.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
}
