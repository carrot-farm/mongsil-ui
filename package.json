{
  "name": "mongsil-ui",
  "version": "0.0.1",
  "description": "react ui library",
  "main": "dist/*.bundle.ts",
  "scripts": {
    "dev": "webpack serve --open --config webpack.dev.js",
    "start": "concurrently \"yarn tw:watch\" \"yarn dev\"",
    "build": "webpack --config webpack.prod.js",
    "lint": "eslint ./src/**/*.tsx --fix",
    "format": "prettier --write ./src",
    "test": "jest --config=jest.config.js",
    "test:watch": "jest --config=jest.config.js --watch",
    "tw:watch": "TAILWIND_MODE=watch NODE_ENV=development postcss ./src/tailwind.css -o ./src/tailwind_out.css -w",
    "tw:build": "NODE_ENV=production postcss ./src/tailwind.css -o ./src/tailwind_out.css/"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --ext .tsx --ext .ts src/ --fix"
    ],
    "./src/**": [
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carrot-farm/mongsil-ui.git"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "react",
    "ui"
  ],
  "author": "chohoki@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carrot-farm/mongsil-ui/issues"
  },
  "homepage": "https://github.com/carrot-farm/mongsil-ui#readme",
  "packageManager": "yarn@3.0.2",
  "devDependencies": {
    "@mdx-js/react": "^1.6.22",
    "@testing-library/dom": "^8.5.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "autoprefixer": "^10.3.5",
    "concurrently": "^6.2.1",
    "css-loader": "^6.3.0",
    "esbuild-loader": "^2.15.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.7",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^6.1.1",
    "puppeteer": "^10.2.0",
    "style-loader": "^3.3.0",
    "tailwindcss": "^2.2.15",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.1.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0"
  }
}
